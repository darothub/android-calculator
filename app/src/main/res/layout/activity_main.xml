<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:padding="20dp"
    tools:context=".MainActivity">

        <RelativeLayout
            android:id="@+id/parentViewGroup"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/calculatorView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerInParent="true">

                <EditText
                    android:id="@+id/display"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:gravity="end"
                    android:layout_margin="20dp"
                    android:inputType="numberDecimal"
                    android:hint="10"
                    android:maxLength="12"
                    tools:text="1000000000"
                    android:imeOptions="actionDone"
                    android:textColor="@color/colorAccent"
                    android:textSize="30sp"

                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="40dp"
                    android:layout_below="@id/display">

                    <LinearLayout
                        android:id="@+id/firstRow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="4"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/acBtn"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="@drawable/circlegrey"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorWhite"
                                android:text="AC"
                                android:textSize="@dimen/TextSize"/>


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/plusOrMinusBtn"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:clickable="true"
                            android:focusable="true"
                            android:layout_marginStart="8dp"
                            android:background="@drawable/circlegrey"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorWhite"
                                android:text="+/-"
                                android:textSize="@dimen/TextSize"/>


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/modBtn"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:clickable="true"
                            android:focusable="true"
                            android:layout_marginStart="8dp"
                            android:background="@drawable/circlegrey"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorWhite"
                                android:text="%"
                                android:textSize="@dimen/TextSize"/>


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/divisionBtn"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:clickable="true"
                            android:focusable="true"
                            android:layout_marginStart="8dp"
                            android:background="@drawable/circleorange"
                          >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorWhite"
                                android:text="&#247;"
                                android:textSize="@dimen/TextSize"/>


                        </LinearLayout>



                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/secondRow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="4"
                        android:layout_marginTop="20dp"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/sevenBtn"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:clickable="true"
                            android:focusable="true"
                            android:elevation="10dp"

                            android:background="@drawable/circledarkgrey"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorWhite"
                                android:text="7"
                                android:textSize="@dimen/TextSize"/>


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/eightBtn"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:clickable="true"
                            android:focusable="true"

                            android:layout_marginStart="8dp"
                            android:background="@drawable/circledarkgrey"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorWhite"
                                android:text="8"
                                android:textSize="@dimen/TextSize"/>


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/nineBtn"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:clickable="true"
                            android:focusable="true"

                            android:layout_marginStart="8dp"
                            android:background="@drawable/circledarkgrey"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorWhite"
                                android:text="9"
                                android:textSize="@dimen/TextSize"/>


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/multBtn"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:clickable="true"
                            android:focusable="true"
                            android:layout_marginStart="8dp"
                            android:background="@drawable/circledarkgrey"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorWhite"
                                android:text="X"
                                android:textSize="@dimen/TextSize"/>


                        </LinearLayout>



                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/thirdRow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="4"
                        android:layout_marginTop="20dp"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/fourBtn"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:clickable="true"
                            android:focusable="true"
                            android:elevation="10dp"

                            android:background="@drawable/circledarkgrey"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorWhite"
                                android:text="4"
                                android:textSize="@dimen/TextSize"/>


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/fiveBtn"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:clickable="true"
                            android:focusable="true"

                            android:layout_marginStart="8dp"
                            android:background="@drawable/circledarkgrey"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorWhite"
                                android:text="5"
                                android:textSize="@dimen/TextSize"/>


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/sixBtn"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:clickable="true"
                            android:focusable="true"

                            android:layout_marginStart="8dp"
                            android:background="@drawable/circledarkgrey"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorWhite"
                                android:text="6"
                                android:textSize="@dimen/TextSize"/>


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/subtractBtn"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:clickable="true"
                            android:focusable="true"
                            android:layout_marginStart="8dp"
                            android:background="@drawable/circledarkgrey"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorWhite"
                                android:text="-"
                                android:textSize="30sp"/>


                        </LinearLayout>



                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/fourthRow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="4"
                        android:layout_marginTop="20dp"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/oneBtn"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:clickable="true"
                            android:focusable="true"
                            android:elevation="10dp"

                            android:background="@drawable/circledarkgrey"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorWhite"
                                android:text="1"
                                android:textSize="@dimen/TextSize"/>


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/twoBtn"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:clickable="true"
                            android:focusable="true"

                            android:layout_marginStart="8dp"
                            android:background="@drawable/circledarkgrey"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorWhite"
                                android:text="2"
                                android:textSize="@dimen/TextSize"/>


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/threeBtn"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:clickable="true"
                            android:focusable="true"

                            android:layout_marginStart="8dp"
                            android:background="@drawable/circledarkgrey"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorWhite"
                                android:text="3"
                                android:textSize="@dimen/TextSize"/>


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/plusBtn"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:clickable="true"
                            android:focusable="true"
                            android:layout_marginStart="8dp"
                            android:background="@drawable/circledarkgrey"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorWhite"
                                android:text="+"
                                android:textSize="@dimen/TextSize"/>


                        </LinearLayout>



                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/fifthRow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="4"
                        android:layout_marginTop="20dp"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/zeroBtn"
                            android:layout_width="100dp"
                            android:layout_height="60dp"
                            android:orientation="vertical"
                            android:gravity="left|center"
                            android:clickable="true"
                            android:focusable="true"
                            android:elevation="10dp"

                            android:background="@drawable/circledarkgrey"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorWhite"
                                android:text="0"
                                android:layout_marginStart="10dp"
                                android:textSize="30sp"/>


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/dotBtn"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:clickable="true"
                            android:focusable="true"

                            android:layout_marginStart="8dp"
                            android:background="@drawable/circledarkgrey"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorWhite"
                                android:text="."
                                android:textSize="@dimen/TextSize"/>


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/equalsToBtn"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:clickable="true"
                            android:focusable="true"

                            android:layout_marginStart="8dp"
                            android:background="@drawable/circledarkgrey"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorWhite"
                                android:text="="
                                android:textSize="@dimen/TextSize"/>


                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>




            </RelativeLayout>
        </RelativeLayout>

</androidx.core.widget.NestedScrollView>